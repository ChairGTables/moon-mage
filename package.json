{
  "name": "phaser-template",
  "version": "0.1.0",
  "description": "Template for Browser Game",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "move-phaser": "cp ./node_modules/phaser/build/phaser.js ./game/assets/js/lib/phaser.js",
    "start-dev": "npm run move-phaser && browser-sync start -s './game' -f './game'",
    "start": "npm run move-phaser && http-server ./game"
  },
  "author": "Spencer Apple (http://spencerapple.com/)",
  "license": "MIT",
  "dependencies": {
    "http-server": "^0.9.0",
    "phaser": "^2.6.2"
  },
  "devDependencies": {
    "browser-sync": "^2.11.1"
  }
}
